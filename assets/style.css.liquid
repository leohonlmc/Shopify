body {
  font-family: "Arial", sans-serif;
  margin: 0;
  padding: 0;
}

h1,
h2,
h3,
h4,
h5,
h6,
p {
  margin: 0;
}

h2 {
  font-weight: bold !important;
}

a {
  text-decoration: none !important;
  color: #333 !important;
}

.main {
  padding: 16px;
}

.row {
  margin-top: 50px;
}

.nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px !important;
}

.product-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 16px;
  margin: 0 -10px;
}

.product-item {
  position: relative;
  flex: 1 1 calc(25% - 20px);
  margin: 10px;
  box-sizing: border-box;
  text-align: left;
}

.product-info {
  padding: 16px;
}

.product-img {
  border-radius: 5px;
  width: 100%;
}

.sale-img-div {
  text-align: center;
  width: 100%;
  background-image: url("./sale.jpg");
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
  height: 400px;
}

.cart-btn {
  width: 100%;
  padding: 10px;
  color: white;
  border-radius: 40px;
  border: none;
  margin-top: 20px;
  background-color: #007bff;
  cursor: pointer;
  transition: 0.3s;
}

.cart-btn.black {
  background-color: black;
}

.cart-btn.grey {
  background-color: grey;
}

.cart-btn.black:hover {
  background-color: #0056b3;
}

.cart-table {
  width: 100%;
  border-collapse: collapse;
  margin-bottom: 20px;
}

.cart-table th,
.cart-table td {
  padding: 10px;
  text-align: left;
}

.cart-table th {
  font-weight: bold;
}

.cart-table img {
  max-width: 100px;
  height: auto;
}

.remove-item:hover {
  text-decoration: underline;
}

.price-details {
  display: flex;
  align-items: center;
}

.total {
  font-size: 20px;
  font-weight: bold;
}

.total del {
  color: #999;
  margin-right: 10px;
}

.discounted-price {
  color: green;
  font-weight: bold;
}

#promo-code {
  padding: 5px;
  border: 1px solid #dee2e6;
  border-radius: 10px;
  margin-right: 10px;
}

#apply-promo-btn {
  background-color: black;
  color: white;
  padding: 5px 10px;
  border: none;
  transition: 0.3s;
  border-radius: 20px;
}

#apply-promo-btn:hover {
  background-color: #0056b3;
}

footer {
  padding: 40px;
  text-align: center;
  background-image: url("./background.jpg");
  background-repeat: no-repeat;
  background-size: cover;
  color: white;
  margin-top: 100px;
}

.border-radius {
  border-top-left-radius: 40px;
  border-top-right-radius: 40px;
  border-top: 1px solid #dee2e6;
}

@media (max-width: 1200px) {
  .product-item {
    flex: 1 1 calc(25% - 20px);
  }
}

@media (max-width: 900px) {
  .product-item {
    flex: 1 1 calc(33.3% - 20px);
  }
}

@media (max-width: 600px) {
  .product-item {
    flex: 1 1 100%;
  }
}
